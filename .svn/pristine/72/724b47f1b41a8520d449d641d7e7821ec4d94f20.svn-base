
#form_login QLineEdit{
    border-radius:3px;
    border:1px solid rgb(209, 209, 209);
    height:28px;
    font-size:12pt;
    padding-left:6px;
    padding-right:6px;
    placeholder:;
    color: rgb(0, 0, 0);
    background-color: rgb(255, 255, 255);
}

#form_login QLineEdit[IsValid="false"]{
    border: 1px solid rgb(255, 0, 0);
    background-color: rgb(255, 240, 208);
}

#form_login QLineEdit:hover{
    border:1px solid rgb(21,131,221);
}

#form_login QCheckBox{
    color:rgb(145, 145, 145);
    font-size:12pt; 
}

#form_login QPushButton{
    border-radius:3px;
    border:none;
    color: rgb(255, 255, 255);
    background-color:rgb(41, 110, 204);
    font-size:13pt;
}

#form_login QPushButton:hover{
    color: rgb(255, 255, 255);
    background-color: rgb(77, 96, 130);
}

#form_login QPushButton:pressed{
    color: rgb(255, 255, 255);
    background-color: rgb(255, 240, 208);
    background-color:rgb(41, 110, 204);
}