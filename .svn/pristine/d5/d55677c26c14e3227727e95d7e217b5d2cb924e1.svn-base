
QPushButton {
    font-size: 14px;
    color: rgb(255, 255, 255);
    background-color: rgb(0, 0, 0);
    border-style: outset;
    border-width: 2px;
    border-color: beige;
}

QPushButton:hover {
    color: rgb(0, 255, 0);
    background-color: rgb(255, 255, 255);
}

QPushButton:pressed {
    color: rgb(0, 0, 0);
    background-color: rgb(255, 255, 255);
    border-style: inset;
}

